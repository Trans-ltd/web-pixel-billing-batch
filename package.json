{
  "name": "web-pixel-billing-batch",
  "version": "1.0.0",
  "description": "Shopify usage-based billing batch processing system",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run compile",
    "compile": "tsc",
    "postcompile": "cp package.prod.json ./dist/package.json && cd dist && npm install --package-lock-only",
    "dev": "functions-framework --target=processBilling --source=dist --signature-type=http",
    "start": "npm run compile && npm run dev",
    "test": "jest --passWithNoTests",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "@google-cloud/bigquery": "^7.3.0",
    "@google-cloud/functions-framework": "^3.3.0",
    "@google-cloud/pubsub": "^4.0.7",
    "dayjs": "^1.11.10"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
